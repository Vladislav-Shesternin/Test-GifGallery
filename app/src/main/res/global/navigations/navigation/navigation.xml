<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/gifListFragment">

    <!-- {DESTINATION}: gifListFragment -->
    <fragment
        android:id="@+id/gifListFragment"
        android:name="com.veldan.test_gifgallery.fragments.gif_list.GifListFragment"
        android:label="GifListFragment"
        tools:layout="@layout/fragment_gif_list">
        <action
            android:id="@+id/action_gifListFragment_to_gifDetailFragment"
            app:destination="@id/gifDetailFragment" />
    </fragment>

    <!-- {DESTINATION}: gifDetailFragment -->
    <fragment
        android:id="@+id/gifDetailFragment"
        android:name="com.veldan.test_gifgallery.fragments.gif_detail.GifDetailFragment"
        android:label="GifDetailFragment"
        tools:layout="@layout/fragment_gif_detail">
        <argument
            android:name="gifUrl"
            app:argType="string" />
    </fragment>
</navigation>